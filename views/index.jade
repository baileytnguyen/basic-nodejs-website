doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Friendly Software
    link(rel="icon", type="image/x-icon", href="/favicon.ico")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    style.
      body {
        background-color: #121212;
        color: #ffffff;
      }
      .footer {
        text-align: center;
        padding: 20px;
        margin-top: 40px;
        margin-bottom: 20px;
        background-color: #1e1e1e;
        color: #ffffff;
      }
      .table-dark th, .table-dark td {
        color: #ffffff;
      }
  body
    .container.mt-4
      h1.text-center.mb-4 Friendly Software
      p.text-center Querying the table: #{tableName}

      if queryResult && queryResult.length > 0
        table.table.table-bordered
          thead
            tr
              each col, index in Object.keys(queryResult[0])
                th= col
                //- Column names based on the result's keys
          tbody
            each row in queryResult
              tr
                each col, index in Object.keys(row)
                  td= row[col]
                  //- Dynamic data rendering based on the column name

      else
        p No results found.

    footer.footer
      | 2025, friendlysoftware.co

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")