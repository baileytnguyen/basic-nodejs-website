doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Friendly Software Gallery
    link(rel="icon", type="image/x-icon", href="/favicon.ico")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    style.
      body {
        background-color: #121212;
        color: #ffffff;
      }
      .card {
        background-color: #1e1e1e;
        border: 1px solid #333;
      }
      .card-text {
        color: #ffffff;
      }
      .card-img-top {
        border-bottom: 1px solid #333;
      }
      .footer {
        text-align: center;
        padding: 20px;
        margin-top: 40px;
        margin-bottom: 20px;
        background-color: #1e1e1e;
        color: #ffffff;
      }

  body
    .container.mt-4
      h1.text-center.mb-4 Friendly Software Gallery
        .row
          each item in descriptions
            .col-6.col-md-4.col-lg-3.mb-4
              .card
                img.card-img-top(src="https://picsum.photos/300/200?random", alt="Placeholder")
                .card-body.text-center
                  p.card-text= item

    footer.footer
      | 2025, friendlysoftware.co

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
